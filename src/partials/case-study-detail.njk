<main class="main">
  <div class="page-title" data-aos="fade">
    <div class="container d-lg-flex justify-content-between align-items-center">
      <h2 class="mb-2 mb-lg-0">{{ detailContent.breadcrumbs.hub }}</h2>
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="{{ localeHref('index.html') }}">{{ detailContent.breadcrumbs.home }}</a></li>
          <li><a href="{{ localeHref('case-studies.html') }}">{{ detailContent.breadcrumbs.hub }}</a></li>
          <li class="current">{{ detailContent.breadcrumbs.current }}</li>
        </ol>
      </nav>
    </div>
  </div>

  <section class="section">
    <div class="container" data-aos="fade-up">
      <div class="case-study-wrap">
        <a class="back-link" href="{{ localeHref('case-studies.html') }}"><i class="bi bi-arrow-left"></i> {{ detailContent.backLabel }}</a>

        <h1>{{ detailContent.heroTitle }}</h1>

        {% for section in detailContent.sections %}
        <h3>{{ section.heading }}</h3>
        {% for block in section.blocks %}
        {% if block.type == 'p' %}
        <p>{{ block.text }}</p>
        {% elif block.type == 'list' %}
        <ul>
          {% for item in block.items %}
          <li>{{ item }}</li>
          {% endfor %}
        </ul>
        {% elif block.type == 'ordered' %}
        <ol>
          {% for item in block.items %}
          <li>{{ item }}</li>
          {% endfor %}
        </ol>
        {% elif block.type == 'kvp' %}
        <p>
          {% for row in block.rows %}
          <strong>{{ row.label }}:</strong> {{ row.value }}{% if not loop.last %}<br>{% endif %}
          {% endfor %}
        </p>
        {% endif %}
        {% endfor %}
        {% endfor %}
      </div>
    </div>
  </section>

  <section class="section light-background">
    <div class="container">
      <div class="cta-box d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
        <div>
          <h3 class="mb-2">{{ detailContent.cta.title }}</h3>
          <p class="mb-0">{{ detailContent.cta.copy }}</p>
        </div>
        <a class="btn btn-primary" href="{{ localeHref(detailContent.cta.href) }}">{{ detailContent.cta.button }}</a>
      </div>
    </div>
  </section>
</main>
