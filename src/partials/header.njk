<header id="header" class="header sticky-top">
  <div class="topbar d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">
      <div class="contact-info d-flex align-items-center">
        <div class="contact-item d-flex align-items-center">
          <i class="bi bi-envelope d-flex align-items-center" aria-hidden="true"></i>
          <a class="topbar-email-link" href="mailto:info@vionix.cloud">info@vionix.cloud</a>
        </div>
        <div class="contact-item d-flex align-items-center ms-4">
          <i class="bi bi-calendar4-week d-flex align-items-center" aria-hidden="true"></i>
          <a class="topbar-cta-link" href="https://cal.com/vionix-consulting/schedule-a-call" target="_blank"
            rel="noopener noreferrer">{{ localeData.nav.scheduleCall }}</a>
        </div>
      </div>
      <div class="social-links d-none d-md-flex align-items-center">
        <a href="https://github.com/vionix-th" class="github" aria-label="Vionix on GitHub"><i class="bi bi-github"
            aria-hidden="true"></i></a>
      </div>
    </div>
  </div>

  <div class="branding d-flex align-items-center">
    <div class="container position-relative d-flex align-items-center justify-content-between">
      <a href="{{ localeHref('index.html') }}" class="logo d-flex align-items-center">
        <span class="sitename">Vionix Consulting</span>
      </a>

      <nav id="navmenu" class="navmenu">
        <ul id="navmenu-list">
          <li class="dropdown"><a href="{{ localeHref('index.html#featured-services') }}"><span>{{ localeData.nav.services }}</span></a><button
              class="toggle-dropdown bi bi-chevron-down" type="button" aria-label="Toggle Services submenu"
              aria-expanded="false"></button>
            <ul>
              <li><a href="{{ localeHref('index.html#featured-services') }}">{{ localeData.nav.servicesOverview }}</a></li>
              <li><a href="{{ localeHref('index.html#about') }}">{{ localeData.nav.howWeWork }}</a></li>
              <li><a href="{{ localeHref('index.html#engagement-formats') }}">{{ localeData.nav.engagements }}</a></li>
              <li><a href="{{ localeHref('service-details.html') }}">{{ localeData.nav.serviceDetails }}</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="{{ localeHref('index.html#team') }}"><span>{{ localeData.nav.team }}</span></a><button class="toggle-dropdown bi bi-chevron-down"
              type="button" aria-label="Toggle Team submenu" aria-expanded="false"></button>
            <ul>
              <li><a href="{{ localeHref('index.html#team') }}">{{ localeData.nav.teamOverview }}</a></li>
              <li><a href="{{ localeHref('skilltable-team1.html') }}">{{ localeData.nav.stefanProfile }}</a></li>
              <li><a href="{{ localeHref('skilltable-team2.html') }}">{{ localeData.nav.ruthProfile }}</a></li>
            </ul>
          </li>
          <li><a href="{{ localeHref('case-studies.html') }}">{{ localeData.nav.caseStudies }}</a></li>
          <li><a href="{{ localeHref('index.html#contact') }}">{{ localeData.nav.contact }}</a></li>
          <li class="dropdown">
            <a href="#"><span>{{ localeCode | upper }}</span></a><button
              class="toggle-dropdown bi bi-chevron-down" type="button" aria-label="Toggle language submenu"
              aria-expanded="false"></button>
            <ul>
              {% for option in availableLocales %}
              <li>
                <a href="{{ option.href }}"
                  {% if option.isCurrent %}aria-current="page"{% else %}data-locale-switch="{{ option.code }}"{% endif %}>
                  {{ option.label }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </li>
        </ul>
        <button class="mobile-nav-toggle d-xl-none bi bi-list" type="button" aria-label="Open menu"
          aria-expanded="false" aria-controls="navmenu-list"></button>
      </nav>
    </div>
  </div>
</header>
