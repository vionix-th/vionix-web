---
layout: base.njk
---
{% from "macros/sections.njk" import serviceDetailSection %}

<main class="main">
  <div class="page-title" data-aos="fade">
    <div class="container">
      <h1>{{ t.hero.title }}</h1>
      <p>{{ t.hero.subtitle }}</p>
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="{{ localeHref('index.html') }}">{{ t.hero.breadcrumbsHome }}</a></li>
          <li class="current">{{ t.hero.breadcrumbsCurrent }}</li>
        </ol>
      </nav>
    </div>
  </div>

  {% for section in t.sections %}
  {{ serviceDetailSection(section) }}
  {% endfor %}

  <section class="service-detail-cta section light-background">
    <div class="container" data-aos="fade-up">
      <div class="service-detail-cta-card">
        <h3>{{ t.cta.title }}</h3>
        <p class="mb-0">{{ t.cta.copy }}</p>
        <a class="btn btn-primary" href="{{ localeHref(t.cta.href) }}">{{ t.cta.button }}</a>
      </div>
    </div>
  </section>
</main>
