---
layout: base.njk
---
{% from "macros/cards.njk" import caseStudyCard %}

<main class="main">
  <div class="page-title" data-aos="fade">
    <div class="container d-lg-flex justify-content-between align-items-center">
      <h1 class="mb-2 mb-lg-0">{{ t.pageTitle }}</h1>
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="{{ localeHref(index.html) }}">{{ t.breadcrumbsHome }}</a></li>
          <li class="current">{{ t.breadcrumbsCurrent }}</li>
        </ol>
      </nav>
    </div>
  </div>

  <section id="case-study-hub" class="portfolio section">
    <div class="case-studies-hero-title" data-aos="fade-up">
      <div class="container section-title case-studies-hero-title-content">
        <h2>{{ t.heroKicker }}</h2>
        <p><span>{{ t.heroIntro }}</span></p>
      </div>
      <div class="container case-studies-hero-intro" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center mb-0">
          <div class="col-lg-10 col-xl-9">
            <p class="mb-0">{{ t.heroBody }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="container isotope-layout" data-default-filter="*" data-layout="fitRows" data-sort="original-order" data-aos="fade-up" data-aos-delay="150">
      <ul class="portfolio-filters isotope-filters">
        <li data-filter="*" class="filter-active">{{ t.filters.all }}</li>
        <li data-filter=".filter-database"><i class="bi {{ localeData.taxonomy.database_reporting_performance.icon }}"></i>{{ t.filters.database }}</li>
        <li data-filter=".filter-legacy"><i class="bi {{ localeData.taxonomy.legacy_core_stabilisation.icon }}"></i>{{ t.filters.legacy }}</li>
        <li data-filter=".filter-modernisation"><i class="bi {{ localeData.taxonomy.incremental_system_modernisation.icon }}"></i>{{ t.filters.modernisation }}</li>
        <li data-filter=".filter-enablement"><i class="bi {{ localeData.taxonomy.efficient_team_workflow_enablement.icon }}"></i>{{ t.filters.enablement }}</li>
      </ul>

      <div class="case-grid-shell">
        <div class="row g-4 g-xl-5 isotope-container case-grid">
          {% for item in t.cards %}
          {{ caseStudyCard(item, t.labels, localeData.taxonomy, localeHref) }}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <section class="section light-background">
    <div class="container">
      <div class="cta-box d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
        <div>
          <h3 class="mb-2">{{ t.cta.title }}</h3>
          <p class="mb-0">{{ t.cta.copy }}</p>
        </div>
        <a class="btn btn-primary" href="{{ localeHref(t.cta.href) }}">{{ t.cta.button }}</a>
      </div>
    </div>
  </section>
</main>
