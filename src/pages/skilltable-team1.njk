---
layout: base.njk
---
{% from "macros/cards.njk" import skillColumn %}

<main class="main">
  <div class="page-title" data-aos="fade">
    <div class="container d-lg-flex justify-content-between align-items-center">
      <h1 class="mb-2 mb-lg-0">{{ t.pageTitle }}</h1>
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol>
          <li><a href="{{ localeHref(index.html) }}">{{ t.breadcrumbsHome }}</a></li>
          <li class="current">{{ t.breadcrumbsCurrent }}</li>
        </ol>
      </nav>
    </div>
  </div>

  <section id="team" class="team section light-background">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.headline }}</h2>
    </div>

    <div class="container">
      <div class="row gy-4 justify-content-center">
        <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
          <div class="team-member">
            <div class="member-img">
              <img src="{{ t.member.image }}" class="img-fluid" alt="{{ t.member.imageAlt }}">
              <div class="social">
                {% if t.member.github %}
                <a href="{{ t.member.github }}" aria-label="GitHub"><i class="bi bi-github"></i></a>
                {% endif %}
              </div>
            </div>
            <div class="member-info">
              <h4>{{ t.member.name }}</h4>
              <span>{{ t.member.role }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="bio-competency" class="bio-competency section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="row gy-4">
        <div class="col-lg-12">
          <div class="bio-content">
            <div class="bio-section">
              <p class="fst-italic">{{ t.intro.lead }}</p>
              <p>{{ t.intro.body }}</p>
            </div>

            {% for section in t.sections %}
            <div class="bio-section">
              <h3>{{ section.title }}</h3>
              {% if section.columns %}
              <div class="row gy-4">
                {% for col in section.columns %}
                {{ skillColumn(col) }}
                {% endfor %}
              </div>
              {% endif %}
              {% if section.single %}
              <div class="service-item">
                <div class="icon"><i class="bi {{ section.single.icon }}"></i></div>
                <ul>
                  {% for item in section.single.items %}
                  <li><i class="bi bi-check-circle"></i> <span>{{ item }}</span></li>
                  {% endfor %}
                </ul>
              </div>
              {% endif %}
            </div>
            {% endfor %}

            <div class="bio-footer text-center mt-5">
              <p class="fst-italic small">{{ t.footer }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
