---
layout: base.njk
---
{% from "macros/cards.njk" import serviceCard, engagementCard, testimonialCard %}

<main class="main">
  <section id="hero" class="hero section light-background">
    <div class="container">
      <div class="row gy-4 align-items-center">
        <div class="col-12 order-2 order-lg-1 d-flex flex-column justify-content-center" data-aos="zoom-out">
          <h1>{{ t.hero.title }}</h1>
          <h2>{{ t.hero.subtitle }}</h2>
          <div class="hero-intro-narrow">
            <p>{{ t.hero.intro }}</p>
          </div>
          <p class="hero-action-line"><a href="#contact" class="hero-contact-btn">{{ t.hero.cta }}</a><span class="hero-action-copy"> {{ t.hero.ctaCopy }} <span class="hero-brand-line">{{ t.hero.brandLine }}</span></span></p>
        </div>
      </div>
    </div>
  </section>

  <section id="featured-services" class="featured-services section">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.services.kicker }}</h2>
      <p><span>{{ t.sections.services.titleLead }}</span> <span class="description-title">{{ t.sections.services.titleEmphasis }}</span></p>
    </div>
    <div class="container">
      <div class="row gy-4">
        {% for item in t.services %}
        {{ serviceCard(item, localeData.taxonomy, localeHref) }}
        {% endfor %}
      </div>
    </div>
  </section>

  <section id="proof-slide" class="proof-slide section light-background">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.proof.kicker }}</h2>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="swiper init-swiper proof-slide-swiper">
        <script type="application/json" class="swiper-config">
          {
            "loop": true,
            "speed": 600,
            "autoplay": { "delay": 4200 },
            "spaceBetween": 16,
            "slidesPerView": 1,
            "pagination": {
              "el": ".proof-slide-pagination",
              "type": "bullets",
              "clickable": true
            }
          }
        </script>
        <div class="swiper-wrapper">
          {% for item in t.proofSlides %}
          <article class="swiper-slide">
            <a class="proof-slide-card" href="{{ localeHref(item.href) }}"><i class="bi bi-quote quote-icon-left" aria-hidden="true"></i><span>{{ item.text }}</span><i class="bi bi-quote quote-icon-right" aria-hidden="true"></i></a>
          </article>
          {% endfor %}
        </div>
        <div class="proof-slide-pagination swiper-pagination"></div>
      </div>
    </div>
  </section>

  <section id="about" class="about section">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.about.kicker }}</h2>
      <p><span>{{ t.sections.about.titleLead }}</span> <span class="description-title">{{ t.sections.about.titleEmphasis }}</span></p>
    </div>
    <div class="container">
      <div class="row gy-3">
        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
          <img src="assets/img/about.jpg" class="img-fluid" alt="Vionix consultants collaborating during a technical planning session">
        </div>
        <div class="col-lg-6 d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="200">
          <div class="about-content ps-0 ps-lg-3">
            <h3>{{ t.about.headline }}</h3>
            <p class="fst-italic">{{ t.about.intro }}</p>
            <ul>
              {% for principle in t.about.principles %}
              <li>
                <i class="bi bi-check-circle"></i>
                <div>
                  <h4>{{ principle.title }}</h4>
                  <p>{{ principle.text }}</p>
                </div>
              </li>
              {% endfor %}
            </ul>
            <p class="mb-3"><strong>{{ t.about.weekOne }}</strong></p>
          </div>
        </div>
        <div class="col-12" data-aos="fade-up" data-aos-delay="250">
          <div class="row g-3">
            <div class="col-lg-6">
              <div class="fit-card h-100">
                <h4>{{ t.about.goodFitTitle }}</h4>
                <ul class="fit-list">
                  {% for point in t.about.goodFit %}
                  <li><i class="bi bi-check2-circle me-2"></i>{{ point }}</li>
                  {% endfor %}
                </ul>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="fit-card h-100">
                <h4>{{ t.about.notFitTitle }}</h4>
                <ul class="fit-list">
                  {% for point in t.about.notFit %}
                  <li><i class="bi bi-x-circle me-2"></i>{{ point }}</li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="engagement-formats" class="services section light-background">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.engagements.kicker }}</h2>
      <p><span>{{ t.sections.engagements.titleLead }}</span> <span class="description-title">{{ t.sections.engagements.titleEmphasis }}</span></p>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="row justify-content-center mb-4 mb-lg-5">
        <div class="col-lg-10 col-xl-9">
          <p class="mb-0">{{ t.engagements.intro1 }}</p>
          <p class="mb-0 mt-3">{{ t.engagements.intro2 }}</p>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row gy-5">
        {% for item in t.engagements.cards %}
        {{ engagementCard(item, t.engagements.labels, localeHref) }}
        {% endfor %}
      </div>
    </div>
  </section>

  <section id="testimonials" class="testimonials section dark-background">
    <img src="assets/img/testimonials-bg.jpg" class="testimonials-bg" alt="" aria-hidden="true">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="swiper init-swiper" data-testimonial-randomized="true" data-max-slides="3" data-max-per-client="2">
        <script type="application/json" class="swiper-config">
          {
            "loop": true,
            "speed": 600,
            "autoplay": { "delay": 5000 },
            "slidesPerView": "auto",
            "pagination": {
              "el": ".swiper-pagination",
              "type": "bullets",
              "clickable": true
            }
          }
        </script>
        <div class="swiper-wrapper">
          {% for item in t.testimonials %}
          {{ testimonialCard(item) }}
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </section>

  <section id="team" class="team section light-background">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.team.kicker }}</h2>
      <p><span>{{ t.sections.team.titleLead }}</span> <span class="description-title">{{ t.sections.team.titleEmphasis }}</span></p>
    </div>
    <div class="container">
      <div class="row gy-4 justify-content-center">
        {% for member in t.team %}
        <div class="col-lg-3 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
          <div class="team-member">
            <div class="member-img">
              <img src="{{ member.image }}" class="img-fluid" alt="Portrait of {{ member.name }}">
              <div class="social">
                <a href="{{ localeHref(member.profileHref) }}" aria-label="{{ member.profileLabel }}"><i class="bi bi-person-vcard" aria-hidden="true"></i></a>
                <a href="mailto:{{ member.email }}" aria-label="{{ member.emailLabel }}"><i class="bi bi-envelope" aria-hidden="true"></i></a>
                {% if member.github %}
                <a href="{{ member.github }}" aria-label="{{ member.githubLabel }}"><i class="bi bi-github" aria-hidden="true"></i></a>
                {% endif %}
              </div>
            </div>
            <div class="member-info">
              <h4>{{ member.name }}</h4>
              <span>{{ member.role }}</span>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <section id="contact" class="contact section">
    <div class="container section-title" data-aos="fade-up">
      <h2>{{ t.sections.contact.kicker }}</h2>
      <p><span>{{ t.sections.contact.titleLead }}</span> <span class="description-title">{{ t.sections.contact.titleEmphasis }}</span></p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="row gy-4">
        <div class="col-lg-5">
          <div class="info-wrap">
            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
              <i class="bi bi-geo-alt flex-shrink-0"></i>
              <div>
                <h3>{{ t.contact.addressLabel }}</h3>
                <p>Soi Sukhumvit 72<br>Sam Rong Nua, Mueang Samut Prakan<br>Samut Prakan 10270<br>Thailand</p>
              </div>
            </div>
            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
              <i class="bi bi-calendar4-week flex-shrink-0"></i>
              <div>
                <h3>{{ t.contact.scheduleLabel }}</h3>
                <p><a href="https://cal.com/vionix-consulting/schedule-a-call" target="_blank" rel="noopener noreferrer">{{ t.contact.scheduleCta }}</a></p>
              </div>
            </div>
            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
              <i class="bi bi-envelope flex-shrink-0"></i>
              <div>
                <h3>{{ t.contact.emailLabel }}</h3>
                <p><a href="mailto:info@vionix.cloud">info@vionix.cloud</a></p>
              </div>
            </div>
            <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
              <i class="bi bi-clock flex-shrink-0"></i>
              <div>
                <h3>{{ t.contact.hoursLabel }}</h3>
                <p>{{ t.contact.hoursText | replace("\n", "<br>") | safe }}</p>
              </div>
            </div>
            <iframe class="contact-map d-none" data-optional-feature="map-embed" data-consent-src="https://maps.google.com/maps?q=Soi%20Sukhumvit%2072%2C%20Samrong%20Nuea%2C%20Mueang%20Samut%20Prakan%2C%20Samut%20Prakan%2010270%2C%20Thailand&t=&z=16&ie=UTF8&iwloc=&output=embed" title="{{ t.contact.mapTitle }}" loading="lazy" allowfullscreen referrerpolicy="no-referrer-when-downgrade"></iframe>
            <div class="small text-muted mt-2" data-optional-placeholder="map-embed">{{ t.contact.mapPlaceholder }}</div>
          </div>
        </div>

        <div class="col-lg-7">
          <form action="https://usebasin.com/f/d9d4dce0cabf" method="post" class="php-email-form basin-form" data-basin-form data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-4 contact-form-fields">
              <div class="col-md-6">
                <label for="name-field" class="pb-2">{{ t.contact.form.name }}</label>
                <input id="name-field" type="text" name="name" class="form-control" required>
              </div>
              <div class="col-md-6">
                <label for="email-field" class="pb-2">{{ t.contact.form.email }}</label>
                <input id="email-field" type="email" class="form-control" name="email" required>
              </div>
              <div class="col-md-12">
                <label for="subject-field" class="pb-2">{{ t.contact.form.subject }}</label>
                <input id="subject-field" type="text" class="form-control" name="subject" required>
              </div>
              <div class="col-md-12">
                <label for="message-field" class="pb-2">{{ t.contact.form.message }}</label>
                <textarea id="message-field" class="form-control" name="message" rows="10" required></textarea>
              </div>
              <div class="col-md-12 text-center contact-form-submit">
                <div class="loading">{{ t.contact.form.loading }}</div>
                <div class="error-message"></div>
                <div class="sent-message">{{ t.contact.form.sent }}</div>
                <button type="submit">{{ t.contact.form.submit }}</button>
              </div>
            </div>
            <div class="form-disclaimer-wrap" aria-label="Datenschutz und Reaktionszeit im Kontaktformular" role="note">
              <div class="form-disclaimer">
                <i class="bi bi-shield-check" aria-hidden="true"></i>
                <p>{{ t.contact.form.disclaimer }}</p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</main>
